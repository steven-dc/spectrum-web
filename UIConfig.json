      "content": [
        {
          "id": "appPort",
          "element": "input",
          "type": "text",
          "label": "TRANSLATE.SPECTRUM_WEB.HTTP_PORT",
          "doc": "Port for HTTP web server (default: 8090)",
          "value": 8090
